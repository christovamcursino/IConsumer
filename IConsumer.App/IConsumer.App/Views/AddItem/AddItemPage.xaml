<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IConsumer.App.Views.AddItem.AddItemPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="LabelProductName"  
                FontSize="50"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <Label Text="Quantidade" 
                FontSize="50"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <Entry x:Name="EntryAmount" Placeholder="Quantidade" />
            <Button x:Name="ButtonAddToCart" Text="Adicionar" Clicked="ButtonAddToCart_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>