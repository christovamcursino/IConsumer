<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IConsumer.App.Views.Checkin.CheckinPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Informe o código da mesa:"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="EntryTableId" Placeholder="TableId" />
            <Button x:Name="ButtonCheckIn" Text="Check-In" Clicked="ButtonCheckIn_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>